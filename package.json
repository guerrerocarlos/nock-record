{
  "name": "nock-record",
  "description": "Small wrapper around Nock Back, with improved ergonomics.",
  "version": "0.3.3",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "MIT",
  "homepage": "https://github.com/edorivai/nock-record",
  "repository": "github:edorivai/nock-record",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest test",
    "test-examples": "jest examples",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/nock": "^9.1.2",
    "@types/node": "^9.6.2",
    "@types/stack-trace": "^0.0.29",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.0",
    "superagent": "^3.8.2",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "nock": "guerrerocarlos/nock",
    "stack-trace": "^0.0.10"
  }
}
